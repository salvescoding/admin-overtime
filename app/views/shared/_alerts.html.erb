<% if flash[:notice] %>
  <%= js add_gritter(flash[:notice], :image => :notice, :title => "Overtime App Notification", :time => 2000) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], :image => :error, :title => "Overtime App Error", :time => 3000) %>
<% else %>
  <%= js add_gritter(flash[:alert], :image => :warning, :title => "Overtime App Alert", :time => 3000) %>
<% end %>
