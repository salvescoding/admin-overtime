<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Date</th>
      <th scope="col">User</th>
      <th scope="col">Rationale</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <th scope="row"> <%= post.id %></th>
      <td> <%= post.date %></td>
      <td> <%= post.user.first_name %></td>
      <td> <%= truncate(post.rationale) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

