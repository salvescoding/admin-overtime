<%= form_for @post do |f| %>

  <% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |msg| %>
      <%= js add_gritter(msg, :image => :notice, :title => "Overtime App", :time => 3000) %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label :date %>
    <%= f.date_field :date, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :rationale %>
    <%= f.text_field :rationale, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :overtime_request %>
    <%= f.number_field :overtime_request, class: "form-control", step: :any %>
  </div>

  <%= render partial: "status", locals: { f: f } if current_user.type == "AdminUser" %>

  <div class="form-group">
    <%= f.submit 'Save', class: "btn btn-outline-primary btn-block" %>
  </div>
<% end %>
