<tr>
  <th scope="row"> <%= post.id %></th>
  <td> <%= post.date %></td>
  <td> <%= post.user.full_name %></td>
  <td> <%= link_to truncate(post.rationale), post_path(post) %></td>
  <td> <%= post.overtime_request.to_f %></td>
  <td> <%= status_label(post.status) %></td>
  <td> <%= link_to fa_icon('edit'), edit_post_path(post), id: "edit_#{post.id}" if policy(post).update? %></td>
  <td> <%= link_to fa_icon('trash'), post_path(post), id: "delete_#{post.id}", method: :delete, data: {confirm: "Are you sure?"} %></td>
</tr>

