<tr>
  <th scope="row"> <%= post.id %></th>
  <td> <%= post.date %></td>
  <td> <%= post.user.full_name %></td>
  <td> <%= truncate(post.rationale) %></td>
  <td> <%= status_label(post.status) %></td>
  <td> <%= link_to 'Edit', edit_post_path(post), id: "edit_#{post.id}" %></td>
  <td> <%= link_to 'Delete', post_path(post), id: "delete_#{post.id}", method: :delete, data: {confirm: "Are you sure?"} %></td>
</tr>

