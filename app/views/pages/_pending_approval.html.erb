<% pending_approvals.each do |post| %>
  <div class="homepage-block col-xs-12 col-sm-6 col-md-3">
    <h6>
      <%= post.user.full_name %>
    </h6>
    <p>
      <span class="pending-details"> Date submitted: </span><%= post.date %>
    </p>
      <p>
      <span class="pending-details"> Rationale: </span><%= truncate post.rationale %>
    </p>
    <div class="row">
      <div class="col-md-6 column">
        <%= link_to 'Approve', approved_post_path(post), class: 'btn btn-sm btn-success btn-block', id: "approved_#{post.id}" %>
      </div>
      <div class="col-md-6 column">
        <%= link_to 'Review', edit_post_path(post), class: 'btn btn-sm btn-warning btn-block' %>
      </div>
    </div>
  </div>
<% end %>
