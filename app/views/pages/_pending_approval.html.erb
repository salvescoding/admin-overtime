<%= pending_approvals.each do |items| %>
  <div class="homepage-block col-xs-12 col-sm-6 col-md-3">
    <h6>
      <%= items.user.full_name %>
    </h6>
    <p>
      <span class="pending-details"> Date submitted: </span><%= items.date %>
    </p>
      <p>
      <span class="pending-details"> Rationale: </span><%= truncate items.rationale %>
    </p>
    <div class="row">
      <div class="col-md-6 column">
        <%= link_to 'Approve', root_path, class: 'btn btn-sm btn-success btn-block' %>
      </div>
      <div class="col-md-6 column">
        <%= link_to 'Review', root_path, class: 'btn btn-sm btn-warning btn-block' %>
      </div>
    </div>
  </div>
<% end %>
